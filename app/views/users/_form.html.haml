%div.formbackground
  = form_for @user do |f|
    %div.formgroup
      = f.label :username
      = f.text_field :username, :autofocus => true, :autocomplete => false
    %div.formgroup
      = f.label :email
      = f.email_field :email
    %div.formgroup
      = f.label :password
      = f.password_field :password
    %div.formgroup
      = f.label :password_confirmation
      = f.password_field :password_confirmation
    / %div.formgroup
    /   = f.label :avatar
    /   = f.text_field :avatar
    %div.formmenu
      = f.label :native_language, "Your Language"
      = f.select(:native_language, LANGUAGES)# makes a dropdown from the constant LANGUAGES
    %div.formsubmit
      - if @current_user.present?
        = f.submit 'Update!'
      - else
        = f.submit 'Sign Up!'
